<div id="page-login" class="row"></div>
<div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <div class="text-right"><a href="/users/register" class="txt-default">Need an account?</a></div>&#x9;&#x9;
    <div class="box">
        <form id="login-form" action="/users/login" method="POST" class="box-content">
            <div class="text-center">
                <h3 class="page-header">Simple-CRM</h3>
            </div>
            {{#if messages.error}}
                <div class="alert alert-danger">Invalid username or password.</div>
            {{/if}}
            <div class="form-group">
                <label class="control-label">Username</label>&#x9;&#x9;&#x9;&#x9;&#x9;
                <input id="username" type="text" name="username" required="required" class="form-control" />
            </div>&#x9;&#x9;&#x9;&#x9;
            <div class="form-group">
                <label class="control-label">Password</label>&#x9;&#x9;&#x9;&#x9;&#x9;
                <input id="password" type="password" name="password" required="required" class="form-control" />
            </div>&#x9;&#x9;&#x9;&#x9;
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    var _login = function() {
        User.login($("#username").val(), $("#password").val());
        return false;
    };
</script>
