extends ../layout_page

block content
  #page-login.row
    .col-xs-12.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
        .text-right
          a.txt-default(href='register.html') Need an account?
        | &#x9;&#x9;
        .box
          form#login-form.box-content(action='/users/login', method='POST')
            .text-center
              h3.page-header Simple-CRM
            | &#x9;&#x9;&#x9;&#x9;
            - if(messages.error)
              div.alert.alert-danger= messages.error
            .form-group
              label.control-label Username
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              input#username.form-control(type='text', name='username', required='required')
            | &#x9;&#x9;&#x9;&#x9;
            .form-group
              label.control-label Password
              | &#x9;&#x9;&#x9;&#x9;&#x9;
              input#password.form-control(type='password', name='password', required='required')
            | &#x9;&#x9;&#x9;&#x9;
            .text-center
              button.btn.btn-primary(type='submit')
                | Sign in
    script(type='text/javascript').
      var _login = function() {
        User.login($("#username").val(), $("#password").val());
        return false;
      };
