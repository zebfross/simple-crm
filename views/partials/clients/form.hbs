<script src="/javascripts/jquery-ui.min.js"></script>
<script type="text/javascript" src="/javascripts/bootstrap-tokenfield.min.js"></script>
<script type="text/javascript">
$(function() {
    var userCategories = "{{user.categories}}".split(",");

    $('#categories').tokenfield({
        autocomplete: {
            source: userCategories,
            delay: 50
        },
        showAutocompleteOnFocus: true,
        delimiter: [',',';'],
        createTokensOnBlur: true
    });
    
});
</script>