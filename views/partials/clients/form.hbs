<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <span>Client Form
                    </span>
                </div>

                <div class="box-icons">
                    <a class="expand-link fa fa-expand" style="font-style: italic"></a>
                </div>

                <div class="no-move"></div>
            </div>

            <div class="box-content">
                <h4 class="page-header">Client<i class="fa fa-pencil"></i></h4>
                <form method="POST" class="form-horizontal" id="client-form" data-toggle="validator" name="client-form"
                    {{#if _id}}
                        action="/clients/{{_id}}/update"
                    {{else}}
                        action="/clients/"
                    {{/if}}>
                    <input id="_id" name="_id" type="hidden" value="{{_id}}">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">First Name <span class="required"></span>
                        </label>

                        <div class="col-sm-4">
                            <input class="form-control" data-placement="bottom" required data-toggle="tooltip" id="name_first" name="name_first" placeholder="First Name" type="text" value="{{name_first}}">
                            <div class="help-block with-errors"></div>
                        </div>
                        <label class="col-sm-2 control-label">Last Name
                        </label>

                        <div class="col-sm-4">
                            <input class="form-control" data-placement="bottom" data-toggle="tooltip" id="name_last" name="name_last" placeholder="Last Name" type="text" value='{{name_last}}'>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Email</label>

                        <div class="col-sm-4">
                            <input class="form-control" data-bv-emailaddress="true" id="email" name="email" placeholder="Email" type="text" value='{{email}}'>
                        </div>
                        <label class="col-sm-2 control-label">Phone</label>

                        <div class="col-sm-4">
                            <input class="form-control" id="phones_0_number" name="phones[0][number]" placeholder="Phone Number" type="text" value="{{phones.0.number}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Address 1</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="address1" name="address1" placeholder="123 1st St" type="text" value="{{address1}}">
                        </div>

                        <label class="col-sm-2 control-label">Address 2</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="address2" name="address2" placeholder="Apt #123" type="text" value="{{address2}}">
                        </div>

                        <label class="col-sm-2 control-label">City</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="city" name="city" placeholder="City" type="text" value="{{city}}">
                        </div>

                        <label class="col-sm-2 control-label">State</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="state" name="state" placeholder="State" type="text" value="{{state}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Rating</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="rating" name="rating" placeholder="Rating" type="number" value="{{rating}}">
                            <div class="help-block with-errors"></div>
                        </div>

                        <label class="col-sm-2 control-label">Categories 
                            <small><a href="/users/{{user._id}}/update">customize suggestion list</a></small>
                        </label>
                        <div class="col-sm-4">
                            <input class="form-control" id="categories" name="categories" placeholder="Categories comma-separated" type="text" value="{{categories}}">
                            <div class="help-block with-errors"></div>
                        </div>

                        <label class="col-sm-2 control-label">Next Contact Date</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="remind_me" name="remind_me" placeholder="Remind Me" type="datetime" value="{{formatDate remind_me "MM/DD/YYYY hhA"}}">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Notes</label>

                        <div class="col-sm-10">
                            <textarea id="notes" name="notes" style="width: 100%; height: 100px;" value="{{notes}}">{{notes}}</textarea>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="form-group">
                        <div class="col-sm-4">
                            <a class="btn btn-default btn-label-left"
                                {{#if _id}}
                                    href="/clients/{{_id}}/details"
                                {{else}}
                                    href="/home"
                                {{/if}}
                            >Cancel</a>
                            <button class="btn btn-primary btn-label-left" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
